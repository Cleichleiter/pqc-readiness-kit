{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Invoke-CryptoInventory (Repo Root)",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}\\scripts\\pwsh\\Invoke-CryptoInventory.ps1",
      "args": [
        "-TargetsConfig", "${workspaceFolder}\\configs\\targets.yml",
        "-ScoringConfig", "${workspaceFolder}\\configs\\scoring.yml",
        "-OutputPath", "${workspaceFolder}\\reports",
        "-IncludeIIS",
        "-IncludeWinRM",
        "-IncludeOpenSSH"
      ],
      "cwd": "${workspaceFolder}"
    }
  ]
}

